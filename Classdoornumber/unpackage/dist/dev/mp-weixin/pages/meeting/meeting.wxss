}
.meeting-box,.sweep-code{
	width: 250rpx;
	height: 250rpx;
	border: 1px solid #CCCCCC;
	border-radius: 5rpx;
	background: #ffb853;
	margin-top: 15rpx;
	text-align: center;
	color: #6d4e23;
}
